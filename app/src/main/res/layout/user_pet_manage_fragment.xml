<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBeigy">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/state_view"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:src="@drawable/state"
                style="?android:attr/borderlessButtonStyle"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"></ImageButton>
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="상태확인"
                android:textAlignment="center"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/reservation_confirm"
                android:layout_width="90dp"
                android:layout_height="60dp"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/confirm"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"></ImageButton>
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="예약 내역 확인"
                android:textAlignment="center"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/vaccin_confirm"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:src="@drawable/id_card"
                style="?android:attr/borderlessButtonStyle"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"></ImageButton>
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="예약 내역 확인"
                android:textAlignment="center"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/hospital_match"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:src="@drawable/hospital_red"
                style="?android:attr/borderlessButtonStyle"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"></ImageButton>
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="예약 내역 확인"
                android:textAlignment="center"></TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일정 입력"
        android:textSize="25dp"
        android:padding="8dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorWeakBrown"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/manage_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>