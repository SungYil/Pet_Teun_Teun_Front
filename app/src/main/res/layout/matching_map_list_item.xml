<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/matching_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx 동물병원"
        android:textSize="18dp"></TextView>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/matching_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tel 02 - xxx - xxxx"
                    android:textSize="15dp"></TextView>


                <TextView
                    android:id="@+id/matching_item_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10km  "></TextView>

                <TextView
                    android:id="@+id/matching_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영업시간 : 10시"></TextView>


            </LinearLayout>

            <RatingBar
                android:id="@+id/matching_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                style="?android:attr/ratingBarStyleIndicator"
                ></RatingBar>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/matching_chat_button"
                    android:layout_marginBottom="2dp"
                    android:layout_width="80dp"
                    android:layout_height="38dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_selector"
                    android:text="문의하기"></Button>

                <Button
                    android:id="@+id/matching_reservation_button"
                    android:layout_width="80dp"
                    android:layout_height="38dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_selector"
                    android:text="예약하기"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>