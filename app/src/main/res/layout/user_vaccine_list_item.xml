<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vaccin_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/hospital_icon"></ImageView>

        <TextView
            android:id="@+id/vaccin_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9/23"
            android:textSize="18dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vaccin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx병원"
            android:textSize="23dp"></TextView>

        <TextView
            android:id="@+id/vaccin_sub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx 예방접종"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/vaccin_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예방 접종 비 2000"
            android:textSize="18dp"></TextView>

    </LinearLayout>

   <!-- <Button
        android:id="@+id/vaccin_detail_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_selector"
        android:text="상세조회"></Button>-->
</LinearLayout>