<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/vaccin_back_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back_space"
            style="?android:attr/borderlessButtonStyle"
            android:scaleType="fitCenter"
            ></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예방접종 확인"
            android:textSize="35dp"
            android:textColor="@color/colorIconRed"
            android:layout_gravity="center"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vaccin_dday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D-120일"
                android:textSize="30dp"></TextView>
            <TextView
                android:id="@+id/vaccin_counting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx 예방접종일 입니다."
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/vaccin_button"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_selector"
            android:text="예약하러 가기"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/colorWeakBrown"
        >
        <TextView
            android:id="@+id/vaccin_day"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2019년"
            android:textSize="21dp"
            android:textColor="@color/colorWhite"
            ></TextView>

        <Button
            android:id="@+id/vaccin_day_change_button"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_selector"
            android:text="변경"></Button>


    </LinearLayout>

    <TextView
        android:id="@+id/state_subText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이전 예방접종"
        android:textSize="25dp"
        android:padding="8dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBrown"></TextView>

    <ListView
        android:id="@+id/user_vaccine_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>